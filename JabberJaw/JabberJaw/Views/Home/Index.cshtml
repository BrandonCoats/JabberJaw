@model JabberJaw.Models.SearchDetails

@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron">
    <div class="MyClass">
        <img src="~/Content/JabberJaw.jpg">
        <h1>JabberJaw Search</h1>
        <h2>Talk to JabberJaw Below</h2>
        <div id="log">
            @foreach (var item in Model.AllText)
            {
                <div>
                    <h4>@item.query</h4>
                </div>
            }
        </div>
        <a href="#openModal">Open Modal</a>

        <div id="openModal" class="modalDialog">
            <div>
                <a href="#close" title="Close" class="close">X</a>
                <h2>Modal Box</h2>
                <p>This is a sample modal box that can be created using the powers of CSS3.</p>
                <p>You could do a lot of things here like have a pop-up ad that shows when your website loads, or create a login/register form for users.</p>
            </div>
        <br />
        @using (Html.BeginForm())
        {
            @Html.TextBoxFor(x => x.newText)
            <input type="submit" Value="Talk" name="Talk To JabberJaw">
        }
    </div>
</div>