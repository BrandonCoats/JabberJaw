@model JabberJaw.Models.SearchDetails

@{
    ViewBag.Title = "Home Page";
}
<link rel="stylesheet" type="text/css" href="~/Content/ModalStyle.css">
<div class="jumbotron">
    <div class="MyClass">
        <img src="~/Content/JabberJaw.jpg">
        <h2>Talk to JabberJaw Below</h2>
        <div id="log">
            @foreach (var item in Model.AllText)
            {
                <div>
                    <h4>@item.query</h4>
                </div>
            }
        </div>
        <div id="mpopupBox" class="mpopup">
            <div class="mpopup-content">
                <div class="mpopup-head">
                    <span class="close">×</span>
                    <h2>Helping JabberJaw Learn</h2>
                </div>
                <div class="mpopup-main">
                    <p>JabberJaw is Always Learning</p>
                    <p>Because of this it always needs help, please click here to get started helping JabberJaw learn</p>
                    @Html.ActionLink("Help JabberJaw Learn", "FeedBack", "Home")
                    <p>Otherwise either click the x up at the top or click out of this Box to go back to your conversation.</p>
                </div>
                <div class="mpopup-foot">
                    <p>A Message from The Developer of JabberJaw</p>
                </div>
            </div>
        </div>
        <br />
      
        <div>
          
            <h3>If JabberJaws not making any sense, help it learn by clicking below.</h3>
            <button type="button" class="popButton" onclick="popUP()" id="mpopupLink">Help Me Learn</button>
        </div>
        <br />
        @using (Html.BeginForm())
        {
            @Html.TextBoxFor(x => x.newText)
            <input type="submit" Value="Talk" name="Talk To JabberJaw">
        }
    </div>
</div>
<script>
    function popUP()
    {
        var mpopup = document.getElementById('mpopupBox');

        // get the link that opens the mPopup
        var mpLink = document.getElementById("mpopupLink");

        // get the close action element
        var close = document.getElementsByClassName("close")[0];

        // open the mPopup once the link is clicked
        mpLink.onclick = function () {
            mpopup.style.display = "block";

        }

        //close the mPopup once close element is clicked
        close.onclick = function () {
            mpopup.style.display = "none";
        }

        // close the mPopup when user clicks outside of the box
        window.onclick = function (event) {
            if (event.target == mpopup) {
                mpopup.style.display = "none";
            }
        }

    }
    popUP();
</script>